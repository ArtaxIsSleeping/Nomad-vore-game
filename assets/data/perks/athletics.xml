<?xml version="1.0"?>
<perk name="athletics">

	<description> Athletics lets you use an adrenaline surge to recover 10AP at the cost of satiation and engage sprint mode to run faster both towards or away from things at the cost of AP.
	</description>
	<move count="2">
		<combatmove name="adrenaline surge" cooldown="300" icon="3"
			ammoCost="10" timeCost="2" pattern="SELF" moveType="OTHER">
			<effectrecover modifier="ENDURANCE" modstrength="0.2"
				modvalue="20" modifies="ACTION" />
			<hitText count="1">
				<text></text>
			</hitText>
			<energySource value="satiation" />
		</combatmove>
		<combatmove name="sprint" toggledability="true" timeCost="1"
			cooldown="30" icon="0" pattern="SELF" bonusAttribute="MELEE"
			moveType="MOVEMENT">
			<hitText count="1">
				<text></text>
			</hitText>
			<missText count="1">
				<text></text>
			</missText>
			<effectStatus probability="100">
				<applyText>TARGET is now sprinting</applyText>
				<statusSubAbilityMod uid="22" icon="5" duration="1000"
					numModifiers="2">
					<effect attribute="MOVECOST" modifier="-100" />
					<effect attribute="MOVEAPCOST" modifier="100" />
					<removeText> TARGET is no longer sprinting</removeText>
				</statusSubAbilityMod>
			</effectStatus>
		</combatmove>		
	</move>
	<maxrank value="1" />

</perk>