			</effectAnalyze>
			<missText count="1">
				<text>you attempt to scan TARGET</text>
			</missText>
			<hitText count="1">
				<text>TARGET 's is being scanned</text>
			</hitText>
		<energySource value="head" />
	</combatMove>	
	<modifier>
	</modifier>
	<energy refill="ENERGY" efficiency="0.5" capacity="10" />	
</ItemEquip>