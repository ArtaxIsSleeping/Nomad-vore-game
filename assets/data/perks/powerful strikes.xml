<?xml version="1.0"?>
<perk name="powerful strikes">
	<requirement count="1">
		<req>PERKwarrior</req>
	</requirement>
	<description>
		Powerful strikes letting you inflict additional damage with power blows (*2 ap cost, +50% damage) or stunning them with stunning blows (*2 ap cost, cooldown)
		(weapon tag: P)
	</description>
	<weaponMove name="powerblow" bonusToHit="0" tag="P"
		actionCost="2" moveType="FIGHT">
		<change type="MOD" proportionate="true">
			<effectDamage type="KINETIC" minValue="50" maxValue="50"
				modifier="STRENGTH" />
		</change>
	</weaponMove>
	<weaponMove name="stunning blow" bonusToHit="0" tag="P" cooldown="40"
		actionCost="2" moveType="FIGHT" icon="15">
			<change type="ADD">
			<effectStatus probability="50" rangedDecay="1">
				<probabilityModifier value="ENDURANCE" />
				<statusTag tag="life" />
				<applyText>TARGET is stunned.</applyText>
				<statusStun uid="9" duration="40">
				TARGET recovers from stunning
				</statusStun>
			</effectStatus>
		</change>
	</weaponMove>	
	<maxrank value="1" />

</perk>