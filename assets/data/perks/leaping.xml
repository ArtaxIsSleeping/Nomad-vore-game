<?xml version="1.0"?>
<perk name="leaping">
	<description>
		Leaping, whether away or towards your enemy, is an acrobatic way to control your position on the battlefield. Useful to close the distance with a brave jump, perhaps even more so to disengage with a leap away. both cost 6 ap to use.
	</description>
	<move count="2">
		<combatmove name="brave jump" bonusAttribute="MELEE"
			timeCost="2" bonusToHit="8" cooldown="50" icon="11" pattern="RANGED"
			actionCost="6" moveType="MOVEMENT">
			<effectMovement moveType="SELF_TOWARDS" distance="4"
				abilityMod="AGILITY" />
			<missText count="1">
				<text>you fail to leap towards TARGET</text>
			</missText>
			<hitText count="1">
				<text>you leap towards TARGET</text>
			</hitText>
		</combatmove>
		<combatmove name="disengage" bonusAttribute="MELEE"
			timeCost="2" bonusToHit="4" cooldown="100" icon="4" pattern="MELEE"
			actionCost="2" moveType="MOVEMENT">
			<missText count="1">
				<text>you fail to disengage from TARGET .</text>
			</missText>
			<hitText count="1">
				<text>you disengage from TARGET</text>
			</hitText>
			<effectMovement moveType="SELF_AWAY" distance="4"
				abilityMod="AGILITY" />
		</combatmove>	
	</move>
	<maxrank value="1" />

</perk>