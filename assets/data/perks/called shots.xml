<?xml version="1.0"?>
<perk name="called shots">
	<requirement count="1">
		<req>PERKmarksman</req>
	</requirement>
	<description>
		A cleverly placed shot can limit your enemies abilities, either slowing them with a disabling shot (x2 AP, weapon tag: A) or lowering their offensive ability with a dehibilating shot (2x AP, -4 to offensive abilities, weapon tag: A)
	</description>
	<weaponMove name="disabling shot" bonusToHit="0" tag="A"
		actionCost="2" moveType="FIGHT">
			<change type="ADD">
			<effectStatus probability="90" rangedDecay="1">
				<probabilityModifier value="ENDURANCE" />
				<statusTag tag="slowing" />
				<applyText>TARGET is slowed</applyText>
				<statusSubAbilityMod uid="22" duration="20" icon="18" numModifiers="1">
				<effect attribute="MOVECOST" modifier="200"/>
				<removeText>
				TARGET is no longer slowed
				</removeText>
				</statusSubAbilityMod>
			</effectStatus>
		</change>
	</weaponMove>
	<weaponMove name="dehibilating shot" tag="A" 
		timeModifier="2" actionCost="2" moveType="FIGHT">
		<change type="ADD">
			<effectStatus probability="90">
				<statusTag tag="weakening" />
				<probabilityModifier value="ENDURANCE" />
				<applyText>TARGET is weakened</applyText>
				<statusAttribMod uid="150" icon="0" duration="20"
					numModifiers="2">
					<removeText> TARGET is no longer weakened</removeText>
					<effect attribute="RANGED" modifier="-4" />
					<effect attribute="MELEE" modifier="-4" />
				</statusAttribMod>
			</effectStatus>	
		</change>
	</weaponMove>	
	<maxrank value="1" />

</perk>